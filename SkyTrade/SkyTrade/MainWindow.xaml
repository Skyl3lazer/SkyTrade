<Window x:Class="SkyTrade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkyTrade"
        mc:Ignorable="d"
        Title="SkyTrade" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Name="txtProgramStatus" HorizontalAlignment="Stretch" Height="15" Text="{Binding SystemStatus}" Grid.Row="1" Grid.Column="0" FontSize="10" FontFamily="Consolas" Padding="6,0,0,0"></TextBlock>
    </Grid>
</Window>
